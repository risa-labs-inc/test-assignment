{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["success", "count", "data"],
  "properties": {
    "success": {
      "type": "boolean",
      "enum": [true]
    },
    "count": {
      "type": "integer",
      "minimum": 0
    },
    "data": {
      "type": "array",
      "items": {
        "$ref": "book-schema.json"
      }
    }
  }
}


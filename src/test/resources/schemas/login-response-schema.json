{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["message", "token", "expiresIn", "user"],
  "properties": {
    "message": {
      "type": "string"
    },
    "token": {
      "type": "string",
      "minLength": 10
    },
    "expiresIn": {
      "type": "string",
      "pattern": "^[0-9]+h$"
    },
    "user": {
      "type": "object",
      "required": ["username", "role"],
      "properties": {
        "username": {
          "type": "string"
        },
        "role": {
          "type": "string"
        }
      }
    }
  }
}


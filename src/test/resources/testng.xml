<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Book Library API Test Suite" verbose="1" parallel="tests" thread-count="3">
    
    <listeners>
        <listener class-name="com.booklibrary.utils.TestListener"/>
    </listeners>
    
    <test name="Authentication Tests" preserve-order="true">
        <classes>
            <class name="com.booklibrary.tests.AuthenticationTests"/>
        </classes>
    </test>
    
    <test name="Books CRUD Tests" preserve-order="true">
        <classes>
            <class name="com.booklibrary.tests.BooksCRUDTests"/>
        </classes>
    </test>
    
    <test name="Schema Validation Tests" preserve-order="true">
        <classes>
            <class name="com.booklibrary.tests.SchemaValidationTests"/>
        </classes>
    </test>
    
</suite>

